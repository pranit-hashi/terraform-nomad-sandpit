# Installs the Nomad as a service for systemd on linux
NAME=nomad

sudo cat << EOF > /etc/systemd/system/${NAME}.service
[Unit]
Description=${NAME}

[Service]
User=root
Group=root
ExecReload=/bin/kill -HUP $MAINPID
ExecStart=/opt/nomad/bin/${NAME} agent -config /opt/nomad/config/
KillMode=process
KillSignal=SIGINT
LimitNOFILE=65536
LimitNPROC=infinity
Restart=on-failure
RestartSec=2
TasksMax=infinity
OOMScoreAdjust=-1000

[Install]
WantedBy=multi-user.target
EOF

# Change owner of Nomad config
# sudo chown root:root /opt/nomad/config/config.hcl

sudo chmod 664 /etc/systemd/system/${NAME}.service
sudo systemctl daemon-reload
sudo systemctl enable ${NAME}
sudo systemctl start ${NAME}